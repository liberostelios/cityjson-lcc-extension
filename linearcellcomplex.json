{
  "type": "CityJSON_Extension",
  "name": "Linear Cell Complex (C-Map)",
  "uri": "https://github.com/liberostelios/cityjson-lcc-extension",
  "version": "0.1",
  "description": "Extension to model the topology of the city as a linear cell complex based on a combinatorial map.",
  "extraRootProperties": {
    "+darts": {
      "type": "object",
      "properties": {
        "betas": {
          "type": "array",
          "items": { "type": "number" }
        },
        "parents": {
          "type": "array",
          "items": { "type": "string" }
        },
        "semanticSurfaces": {
          "type": "array",
          "items": { "type": "number" }
        },
        "vertices": {
          "type": "array",
          "items": { "type": "number" }
        }
      },
      "required": [ "betas", "parents", "vertices" ],
      "additionalProperties": false
    }
  },
  "extraAttributes": {
    "_AbstractCityObject": {
      "+lccVolumes": {
        "type": "array",
        "items": { "type": "number" }
      }
    }
  },
  "extraCityObjects": {}
}
